class Circle1 
{
 public double r;
 public double pi;
 public double area;
 public double circum; 

public void area()
{
 
  area=pi*r*r;
 System.out.println("area of the circle "+area+".");
}
public void circum()
{
  
  circum=2*pi*r;
  System.out.println("circum of the circle "+circum+".");
}
}
public class Circle1demo
{
public static void main(String args[])
{
Circle1 c=new Circle1();

c.r=8.56;
c.pi=3;

c.area();
c.circum();
}
}



